@model MusicProjectApp.Models.Festival

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Festival</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ArtistaId"></label>
                <select asp-for="ArtistaId" class ="form-control" asp-items="ViewBag.ArtistaId"></select>
            </div>
            <div>
                <label asp-for="Ciudad"></label>
                <input asp-for="Ciudad" class="form-control" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="FechaInicio"></label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
            </div>
            <div>
                <label asp-for="FechaFinal"></label>
                <input asp-for="FechaFinal" type="date" class="form-control" />
            </div>
            <div>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
